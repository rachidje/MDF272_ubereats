generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model Restaurant {
  id                String        @id @default(uuid())
  name              String
  ownerName         String
  foodTypes         String[]
  postalcode        String
  address           String
  phone             String
  email             String        @unique
  password          String
  salt              String
  serviceAvailable  Boolean       @default(false)
  coverImages       String[]      @default([])
  rating            Float         @default(0.0)
  createdAt         DateTime      @default(now())
  foods             Food[]
}

model Food {
  id                String        @id @default(uuid())
  name              String
  restaurantId      String
  description       String
  category          String
  foodType          String
  readyTime         Int
  price             Float
  images            String[]      @default([])
  restaurant        Restaurant    @relation(fields: [restaurantId], references: [id])
}
